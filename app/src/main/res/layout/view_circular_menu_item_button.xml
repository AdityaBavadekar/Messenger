<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootFrame"
    android:layout_width="@dimen/menu_item_size"
    android:layout_height="@dimen/menu_item_size"
    android:background="?selectableItemBackgroundBorderless">

    <FrameLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/button"
            android:layout_width="@dimen/menu_item_icon_size"
            android:layout_height="@dimen/menu_item_icon_size"
            android:layout_gravity="center"
            android:contentDescription="Button"
            tools:src="@drawable/ic_user_profile_default" />

        <ImageView
            android:id="@+id/badge_view"
            android:layout_width="@dimen/menu_item_badge_icon_size"
            android:layout_height="@dimen/menu_item_badge_icon_size"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/drawable_menu_item_badge"
            android:visibility="gone" />

    </FrameLayout>

</FrameLayout>