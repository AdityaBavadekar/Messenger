<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/message_margin_top"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/message_padding_horizontal"
    android:paddingVertical="@dimen/message_padding_vertical">

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/dimen_8"
        android:paddingVertical="@dimen/dimen_4"
        android:gravity="center"
        android:background="@drawable/background_timestamp_header"
        android:maxLines="1"
        android:minLines="1"
        android:textAppearance="@style/TextAppearance.Messenger.Message.Timestamp"
        tools:text="12 Sept 2022" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

</LinearLayout>