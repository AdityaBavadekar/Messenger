<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dimen_8"
    android:layout_marginEnd="@dimen/dimen_8"
    android:background="@drawable/edit_text_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/edit_text_layout_drawable_padding"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingTop="@dimen/dimen_8"
            android:paddingBottom="@dimen/dimen_2"
            android:text="@string/code"
            android:textAppearance="@style/TextAppearance.Messenger.LabelSmall"
            android:textColor="?colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countryCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?colorSurface"
                android:gravity="center"
                android:maxLength="4"
                android:maxLines="1"
                android:minWidth="100dp"
                android:minLines="1"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:textAppearance="@style/TextAppearance.Messenger.LabelLarge"
                tools:text="91" />

            <ImageView
                android:layout_width="@dimen/menu_item_icon_size"
                android:layout_height="@dimen/menu_item_icon_size"
                android:layout_gravity="top"
                android:layout_marginHorizontal="@dimen/dimen_4"
                android:alpha="0.8"
                android:src="@drawable/ic_arrow_drop_down" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>