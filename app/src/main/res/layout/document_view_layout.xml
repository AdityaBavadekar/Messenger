<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holder"
    style="@style/Messenger.Widget.PhotoAttachmentsView.Card"
    android:layout_width="@dimen/message_max_width"
    android:maxWidth="@dimen/message_image_height"
    app:cardCornerRadius="@dimen/message_corner_radius"
    app:cardElevation="0dp"
    app:cardForegroundColor="@android:color/transparent"
    app:contentPaddingBottom="10dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="10dp"
    app:contentPaddingTop="10dp">

    <com.google.android.material.card.MaterialCardView
        style="?materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimen_4"
        android:clickable="false"
        android:focusable="false"
        android:maxWidth="@dimen/message_image_height"
        android:minWidth="@dimen/message_max_width"
        app:cardCornerRadius="@dimen/message_corner_radius"
        app:cardForegroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxWidth="@dimen/message_image_height"
            android:maxHeight="@dimen/message_image_height"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxWidth="@dimen/message_image_height"
                android:maxHeight="@dimen/message_image_height"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="4dp"
                    tools:text="File_Name.extension" />

            </LinearLayout>


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="150dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.44"
                    android:maxLines="1"
                    android:padding="4dp"
                    tools:text="PDF - 2MB" />

            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</com.google.android.material.card.MaterialCardView>