<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_gravity="bottom"
    android:elevation="@dimen/appbar_elevation"
    android:background="?colorSurface"
    android:orientation="vertical"
    android:visibility="gone"
    android:minHeight="@dimen/conversation_bottom_bar_min_height"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:visibility="visible">

    <include layout="@layout/settings_activity_divider_item" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:importantForAutofill="no"
        android:minHeight="@dimen/compose_message_min_height"
        android:minLines="1"
        android:text="@string/only_managers_can_send_messages"
        android:textAppearance="@style/TextAppearance.Messenger.LabelMedium" />

</LinearLayout>
