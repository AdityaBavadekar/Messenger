<resources>

    <declare-styleable name="CircularMenuItemButton">

        <attr name="android:src" format="reference" />

        <attr name="srcCompat" format="reference" />

        <attr name="containerColor" format="color" />

        <attr name="imageContentDescription" format="color" />

        <attr name="badgeVisible" format="boolean" />

        <attr name="iconTint" format="color" />

        <attr name="iconScaleType" format="color" />

    </declare-styleable>

    <declare-styleable name="ComposeMessageBar">

        <attr name="addButtonVisible" format="boolean" />

        <attr name="emojiButtonVisible" format="boolean" />

        <attr name="inputEditTextHint" format="string" />

        <attr name="inputEditTextMaxLines" format="integer" />

        <attr name="inputAllowRichContent" format="boolean" />

        <attr name="plainTextOnly" format="boolean" />

        <attr name="innerContainerBackground" format="reference" />

        <attr name="buttonIconTint" format="color" />

        <attr name="android:text" format="string" localization="suggested" />

    </declare-styleable>

    <declare-styleable name="AvatarImageView">

        <attr name="cornerRadius" format="dimension" />

        <attr name="elevation" format="dimension" />

        <attr name="imageBackgroundColor" format="color" />

    </declare-styleable>

</resources>